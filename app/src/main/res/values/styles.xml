    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CastName" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="CastNameSub" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="Content" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.8</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
